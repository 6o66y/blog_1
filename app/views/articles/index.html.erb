<h1 class="h1">Articles</h1>

<div class="index">
  <% @articles.each do |article| %>
    <div class="index_item">
      <%= link_to article_path(article) do %>
        <div class="date_index">
          <%= article.created_at.strftime("%Y-%m-%d %H:%M") %>
        </div>

        <div class="title_index">
          <%= article.title %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
